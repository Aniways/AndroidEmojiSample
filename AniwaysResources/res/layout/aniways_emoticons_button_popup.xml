<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Aniways.StyledIndicators"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aniways_LightGray"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/aniways_ebp_credits_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="0dp"
        android:background="@drawable/aniways_popup_coins_balance"
        android:ellipsize="end"
        android:lines="1"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:text="10"
        android:textColor="@color/aniways_White"
        android:textSize="10sp"
        android:textStyle="bold" />

    <com.aniways.emoticons.button.NonScrollingViewPager
        android:id="@+id/aniways_ebp_icon_categories_pager"
        style="@style/Aniways.StyledIndicators"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/aniways_ebp_icon_categories_pager_indicator_holder"
        style="@style/Aniways.StyledIndicators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.aniways.viewpagerindicator.TabPageIndicator
            android:id="@+id/aniways_ebp_icon_categories_pager_indicator"
            style="@style/Aniways.StyledIndicators"
            android:layout_width="0dp"
            android:background="@color/aniways_White"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:padding="0dip" />

        <ImageView
            android:id="@+id/aniways_ebp_backspace_button"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/aniways_ebp_backspace_background"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/aniways_ebp_backspace_button" />

    </LinearLayout>

</LinearLayout>